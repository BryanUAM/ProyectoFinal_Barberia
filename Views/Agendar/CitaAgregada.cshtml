@{
    ViewData["Title"] = "Cita Agendada";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-7">

        <div class="card text-center shadow-lg border-0 rounded-4">

            <div class="card-header py-4 bg-success text-white rounded-top-4">
                <h2 class="fw-bold">✔ ¡Cita Programada!</h2>
            </div>

            <div class="card-body py-5">

                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>

                <p class="fs-5 text-muted">
                    Su cita ha sido agendada exitosamente.
                </p>

                <p class="fw-semibold mt-2">
                    En la sección de <strong>Mis Citas</strong> podrá ver el detalle.
                </p>

                <div class="mt-4 d-flex justify-content-center gap-3">
                    <a href="/Agendar" class="btn btn-outline-primary px-4 py-2 fw-bold">
                        🗓 Agendar otra cita
                    </a>

                    <a href="/Home/Index" class="btn btn-primary px-4 py-2 fw-bold">
                        ⬅ Volver al Inicio
                    </a>
                </div>

            </div>

        </div>

    </div>
</div>
