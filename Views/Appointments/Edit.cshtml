@model BarberiaLosHermanos.Models.Appointment

@{
    ViewData["Title"] = "Editar Cita";
}

<h2 class="text-center mt-4 fw-bold">✏ Editar Cita</h2>

<div class="row justify-content-center mt-3">
    <div class="col-md-8">

        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-dark text-white rounded-top-4">
                <h4 class="fw-bold mb-0">Cita #@Model.AppointmentId</h4>
            </div>

            <div class="card-body p-4">

                <form asp-action="Edit" method="post">

                    <input type="hidden" asp-for="AppointmentId" />

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Cliente</label>
                        <select name="ClienteId" class="form-select">

                            @foreach (var c in ViewBag.Clientes)
                            {
                                <option value="@c.ClienteId"
                                        selected="@(c.ClienteId == Model.ClienteId)">
                                    @c.Nombre
                                </option>
                            }

                        </select>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Barbero</label>
                        <select name="BarberoId" class="form-select">

                            @foreach (var b in ViewBag.Barberos)
                            {
                                <option value="@b.BarberoId"
                                        selected="@(b.BarberoId == Model.BarberoId)">
                                    @b.Nombre
                                </option>
                            }

                        </select>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Servicios</label>

                        <div class="border rounded p-3" style="background:#f9f9f9;">

                            @foreach (var s in ViewBag.Servicios)
                            {
                                bool seleccionado = Model.Servicios.Any(x => x.ProductoId == s.ProductoId);

                                <div class="form-check mb-2">
                                    <input type="checkbox"
                                           class="form-check-input"
                                           name="serviciosSeleccionados"
                                           value="@s.ProductoId"
                                           @(seleccionado ? "checked=\"checked\"" : "") />

                                    <label class="form-check-label fw-semibold">
                                        @s.Nombre —
                                        <span class="text-success">₡@s.Precio.ToString("N0")</span>
                                    </label>
                                </div>
                            }

                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Fecha y Hora</label>

                        <input type="datetime-local"
                               name="FechaHora"
                               class="form-control"
                               value="@Model.FechaHora.ToString("yyyy-MM-ddTHH:mm")" />
                    </div>

                    <div class="form-check form-switch mb-4">
                        <input type="checkbox"
                               class="form-check-input"
                               name="Realizada"
                               @(Model.Realizada ? "checked=\"checked\"" : "") />

                        <label class="form-check-label fw-semibold">¿Cita realizada?</label>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-action="Index" class="btn btn-secondary px-4 me-2">⬅ Volver</a>

                        <button type="submit" class="btn btn-primary px-4 fw-bold">
                            💾 Guardar Cambios
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>
