@model IEnumerable<BarberiaLosHermanos.Models.Appointment>

@{
    ViewData["Title"] = "Listado de Citas";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success text-center mt-3 fw-semibold">
        @TempData["Mensaje"]
    </div>
}

<h2 class="text-center mt-4 fw-bold">📋 Citas Agendadas</h2>

<p class="text-center mb-4">
    <a asp-action="Create" class="btn btn-dark px-4 fw-semibold">➕ Agendar Nueva Cita</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">No hay citas registradas.</div>
}
else
{
    <div class="row g-4">
        @foreach (var cita in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm border-0 rounded-4">

                    <!-- HEADER -->
                    <div class="card-header bg-dark text-white rounded-top-4">
                        <h5 class="fw-bold mb-0">
                            ✂ Cita #@cita.AppointmentId
                        </h5>
                    </div>

                    <!-- BODY -->
                    <div class="card-body">

                        <!-- CLIENTE -->
                        <p class="mb-2">
                            <strong>Cliente:</strong>
                            @cita.Cliente?.Nombre
                        </p>

                        <!-- BARBERO -->
                        <p class="mb-2">
                            <strong>Barbero:</strong>
                            @cita.Barbero?.Nombre
                        </p>

                        <!-- SERVICIOS -->
                        <p class="fw-bold mt-3 mb-1">Servicios:</p>

                        <ul class="list-group mb-3">
                            @foreach (var s in cita.Servicios)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    @s.Producto.Nombre
                                    <span class="text-success fw-bold">
                                        ₡@s.Producto.Precio.ToString("N0")
                                    </span>
                                </li>
                            }
                        </ul>

                        <!-- FECHA Y HORA -->
                        <p class="mt-3">
                            <strong>Fecha:</strong>
                            @cita.FechaHora.ToString("dd/MM/yyyy")
                            <br />
                            <strong>Hora:</strong>
                            @cita.FechaHora.ToString("hh:mm tt")
                        </p>

                        <!-- ESTADO -->
                        <p class="mt-2">
                            <strong>Estado:</strong>
                            @if (cita.Realizada)
                            {
                                <span class="badge bg-success">Realizada</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pendiente</span>
                            }
                        </p>

                        <!-- ACCIONES -->
                        <div class="mt-3 d-flex flex-wrap gap-2">

                            <a asp-action="Edit" asp-route-id="@cita.AppointmentId"
                               class="btn btn-sm btn-outline-primary fw-semibold">
                                ✏ Editar
                            </a>

                            <a asp-action="Details" asp-route-id="@cita.AppointmentId"
                               class="btn btn-sm btn-outline-secondary fw-semibold">
                                📄 Detalles
                            </a>

                            <!-- 🧾 BOTÓN NUEVO: Generar Factura -->
                            <a asp-controller="Facturas"
                               asp-action="Create"
                               asp-route-appointmentId="@cita.AppointmentId"
                               class="btn btn-sm fw-bold"
                               style="color:#009688; border:2px solid #009688;">
                                🧾 Generar Factura
                            </a>

                            <!-- ELIMINAR -->
                            <a asp-action="Delete" asp-route-id="@cita.AppointmentId"
                               class="btn btn-sm fw-bold"
                               style="color:#b30000; border:2px solid #b30000;">
                                🗑 Eliminar
                            </a>

                            <!-- MARCAR REALIZADA -->
                            @if (!cita.Realizada)
                            {
                                <form asp-action="MarcarRealizada" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@cita.AppointmentId" />
                                    <button type="submit"
                                            class="btn btn-sm btn-success fw-semibold">
                                        ✔ Marcar Realizada
                                    </button>
                                </form>
                            }

                        </div>

                    </div>

                </div>
            </div>
        }
    </div>
}
