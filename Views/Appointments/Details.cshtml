@model BarberiaLosHermanos.Models.Appointment

@{
    ViewData["Title"] = "Detalles de la Cita";
}

<h2 class="text-center mt-4 fw-bold">📄 Detalles de la Cita</h2>

<div class="row justify-content-center mt-4">
    <div class="col-md-7">

        <div class="card shadow-lg border-0 rounded-4">

            <div class="card-header bg-dark text-white rounded-top-4">
                <h5 class="fw-bold mb-0">Cita #@Model.AppointmentId</h5>
            </div>

            <div class="card-body p-4">

                <p class="mb-2 fs-5">
                    <strong>Cliente:</strong>
                    @Model.Cliente?.Nombre
                </p>

                <p class="mb-2 fs-5">
                    <strong>Barbero:</strong>
                    @Model.Barbero?.Nombre
                </p>

                <h5 class="fw-bold mt-4">Servicios incluidos</h5>

                <ul class="list-group mb-3">
                    @foreach (var s in Model.Servicios)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            @s.Producto.Nombre
                            <span class="text-success fw-bold">₡@s.Producto.Precio.ToString("N0")</span>
                        </li>
                    }
                </ul>

                <p class="mt-3 fs-5">
                    <strong>Fecha:</strong>
                    @Model.FechaHora.ToString("dd/MM/yyyy")
                    <br />
                    <strong>Hora:</strong>
                    @Model.FechaHora.ToString("hh:mm tt")
                </p>

                <p class="mt-3 fs-5">
                    <strong>Estado:</strong>
                    @if (Model.Realizada)
                    {
                        <span class="badge bg-success">Realizada</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Pendiente</span>
                    }
                </p>

            </div>

            <div class="card-footer bg-light text-center rounded-bottom-4">

                <a asp-action="Edit" asp-route-id="@Model.AppointmentId"
                   class="btn btn-outline-primary fw-semibold me-2">
                    ✏ Editar
                </a>

                <a asp-action="Index"
                   class="btn btn-secondary fw-semibold me-2">
                    ⬅ Volver
                </a>

                <a asp-action="Delete" asp-route-id="@Model.AppointmentId"
                   class="btn btn-outline-danger fw-semibold">
                    🗑 Eliminar
                </a>

            </div>

        </div>

    </div>
</div>
