@model BarberiaLosHermanos.Models.Factura

@{
    ViewData["Title"] = "Eliminar Factura";
}

<h2 class="text-center mt-4 mb-4 fw-bold text-danger">🗑️ Eliminar Factura</h2>

<div class="alert alert-danger text-center w-75 mx-auto">
    <p>¿Seguro que deseas eliminar esta factura? Esta acción no se puede deshacer.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <dl class="row border p-3 rounded shadow-sm bg-light">
            <dt class="col-sm-4">Fecha</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Fecha)</dd>

            <dt class="col-sm-4">Cliente</dt>
            <dd class="col-sm-8">@Model.Cliente?.Nombre</dd>

            <dt class="col-sm-4">Monto Total</dt>
            <dd class="col-sm-8">₡@string.Format("{0:N2}", Model.MontoTotal)</dd>
        </dl>

        <form asp-action="Delete" method="post" class="text-center mt-3">
            <input type="hidden" asp-for="FacturaId" />
            <button type="submit" class="btn btn-danger me-2">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
