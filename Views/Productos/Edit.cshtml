@model BarberiaLosHermanos.Models.Producto

@{
    ViewData["Title"] = "Editar Servicio";
}

<div class="container mt-5" style="max-width: 700px;">

    <div class="card shadow-soft border-0">

        <div class="card-header bg-info text-white text-center fw-bold">
            ✂ Editar Servicio
        </div>

        <div class="card-body p-4">

            <form asp-action="Edit">

                <input type="hidden" asp-for="ProductoId" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Nombre del Servicio</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Precio (₡)</label>
                    <input asp-for="Precio" type="number" min="0" step="100" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Disponible" class="form-check-input" type="checkbox" />
                    <label class="form-check-label fw-semibold">
                        Disponible para Reservas
                    </label>
                </div>

                <div class="mt-4 d-flex justify-content-between">

                    <a asp-action="Index" class="btn btn-secondary fw-semibold">
                        ⬅ Cancelar
                    </a>

                    <button type="submit" class="btn btn-info text-white fw-bold">
                        Guardar Cambios
                    </button>

                </div>

            </form>

        </div>

    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
