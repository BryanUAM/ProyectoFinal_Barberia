@model BarberiaLosHermanos.Models.Producto

@{
    ViewData["Title"] = "Registrar Servicio";
}

<h2 class="text-center mt-4 fw-bold">✂️ Registrar Nuevo Servicio</h2>
<p class="text-center text-muted mb-4">Complete los siguientes datos del servicio ofrecido por la barbería</p>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label fw-semibold">
                            <i class="bi bi-scissors me-1"></i> Nombre del servicio
                        </label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej. Corte clásico, Afeitado completo" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Precio" class="form-label fw-semibold">
                            <i class="bi bi-cash-stack me-1"></i> Precio (₡)
                        </label>
                        <input asp-for="Precio" class="form-control" type="number" step="0.01" placeholder="Ej. 5000" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="Disponible" class="form-check-input" type="checkbox" />
                        <label asp-for="Disponible" class="form-check-label fw-semibold">
                            Servicio Disponible
                        </label>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-dark px-4 me-2">
                            💾 Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            ⬅️ Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
